<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.CommanderActivity"
    tools:showIn="@layout/activity_commander">

    <LinearLayout
        android:id="@+id/schedule-movies_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/media_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media Status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp">

                <Button
                    android:id="@+id/send_system_commands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Commands" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp">

                <Button
                    android:id="@+id/send_video_commands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Commands" />

                <Button
                    android:id="@+id/send_audio_commands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio Commands" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                >
                <Button
                    android:id="@+id/schedule_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Movies" />

                <Button
                    android:id="@+id/schedule_tv_shows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule TV Shows" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/schedule_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Music" />

            <Button
                android:id="@+id/schedule_audio_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Audio Book" />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>